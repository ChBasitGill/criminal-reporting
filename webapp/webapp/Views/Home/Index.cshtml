            <span>@*Dashboard*@</span>
        </h4>
    </div>

</div>
<!-- Heading -->
<!--Grid row-->
<div class="row wow fadeIn">
    <div class="col-md-12 mb-4">

        <!--Card-->
        <div class="card">

            <!--Card content-->
            <div class="card-body" id="home">
                <div class="container-fluid">
                    <div class="center">
                        <!-- Game title -->
                        <h1>Love Calculator</h1>
                        <p id='helper-text'>Enter the name of your partner/crush!</p>

                        <form id="guessing-form">
                            <div>
                                <!-- Number input box -->
                                <input class='hide-me' id="number-input" type="text" required  value="" placeholder="Enter name" autocomplete="off">
                                <br>
                                <!-- Submit button -->
                                <button id='submit-btn' class="btn btn-lg btn-primary hide-me" value="" type="button">Submit</button>
                            </div>
                        </form>
                        <div id='prev-guesses' class='hide-me guesss'></div>
                     
                    </div>
                </div>


            </div>

        </div>
        <!--/.Card-->

    </div>
